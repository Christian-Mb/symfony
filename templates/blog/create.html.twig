{% extends'base.html.twig' %}
{% form_theme formArticle 'bootstrap_4_layout.html.twig' %}

{% block body %}
    <div class="container mt-4">
        <div class="cold md-4">
            <div class="card mb-4">
                <div class="card-body">
                    <h1>Cr√©er un article</h1>
                    {{ form_start(formArticle) }}

                    {{ form_row(formArticle.title,{'attr': {'placeholder':"Titre de l'article"}}) }}
                    {{ form_row(formArticle.category) }}
                    <div class=" toolbar enabledtoolbar">
                        {{ form_row(formArticle.content,{'attr': {'placeholder':"Contenu de l'article"}}) }}

                    </div>
                    {{ form_row(formArticle.imageFile) }}
                    {{ form_row(formArticle.author,{'attr': {'placeholder':"Auteur de l'article"}}) }}
                    {{ form_row(formArticle.genreLitteraire,{'attr': {'placeholder':"Genre de l'article"}}) }}
                    <button type="submit" class="btn btn-success">
                        {% if editMode %}
                            Enregistrer les modifications
                        {% else %}
                            Ajouter l'article
                        {% endif %}
                    </button>

                    {{ form_end(formArticle) }}
                </div>

            </div>
        </div>

    </div>


{% endblock %}